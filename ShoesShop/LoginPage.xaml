<Page x:Class="ShoesShop.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница входа">
    <Page.Resources>
        <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Авторизация"></TextBlock>
        <Button Grid.Row="0" Grid.Column="1" Click="Button_Click">Товары (Гость)</Button>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Логин"></TextBlock>
        <TextBox Name="TextBox_Login" Grid.Row="1" Grid.Column="1"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль"></TextBlock>
        <PasswordBox Name="PasswordBox_Password" Grid.Row="2" Grid.Column="1"></PasswordBox>

        <Button Name="Button_Login" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="Button_Login_Click">Войти</Button>
    </Grid>
</Page>
