<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="TextBlock" x:Key="TextBlockStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Background" Value="#7FFF00"></Setter>
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Background" Value="#7FFF00"></Setter>
    </Style>

    <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Background" Value="#7FFF00"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Background" Value="#00FA9A"></Setter>
    </Style>

    <Style TargetType="DatePicker" x:Key="DatePickerStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Background" Value="#7FFF00"></Setter>
    </Style>

    <Style TargetType="DataGrid" x:Key="DataGridStyle">
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
    </Style>

    <Style TargetType="Image" x:Key="ImageStyle">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"></Setter>
        <Setter Property="Margin" Value="5"></Setter> 
    </Style>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"></Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}"></Style>

    <Style TargetType="PasswordBox" BasedOn="{StaticResource PasswordBoxStyle}"></Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}"></Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"></Style>

    <Style TargetType="DatePicker" BasedOn="{StaticResource DatePickerStyle}"></Style>

    <Style TargetType="DataGrid" BasedOn="{StaticResource DataGridStyle}"></Style>

    <Style TargetType="Image" BasedOn="{StaticResource ImageStyle}"></Style>
</ResourceDictionary>