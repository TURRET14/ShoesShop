<Page x:Class="ShoesShop.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop"
      Title="Страница изменения товара">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="500">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Изменение/добавление товара" FontWeight="Bold"></TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование"></TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProductName}"></TextBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория"></TextBlock>
            <ComboBox Name="ComboBox_Category" Grid.Row="2" Grid.Column="1" SelectedItem="{Binding ProductCategory}" DisplayMemberPath="Name"></ComboBox>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Описание"></TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ProductDescription}"></TextBox>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Производитель"></TextBlock>
            <ComboBox Name="ComboBox_Manufacturer" Grid.Row="4" Grid.Column="1" SelectedItem="{Binding ProductManufacturer}" DisplayMemberPath="Name"></ComboBox>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Поставщик"></TextBlock>
            <ComboBox Name="ComboBox_Supplier" Grid.Row="5" Grid.Column="1" SelectedItem="{Binding ProductSupplier}" DisplayMemberPath="Name"></ComboBox>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Цена"></TextBlock>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ProductPrice}"></TextBox>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Единица измерения"></TextBlock>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding ProductUnit}"></TextBox>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="Количество на складе"></TextBlock>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding ProductInStock}"></TextBox>

            <TextBlock Grid.Row="9" Grid.Column="0" Text="Действующая скидка"></TextBlock>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding ProductDiscount}"></TextBox>

            <TextBlock Grid.Row="10" Grid.Column="0" Text="Артикул"></TextBlock>
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding ProductArticle}"></TextBox>

            <Image Name="Image_Icon" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Width="250" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Source>
                    <Binding Path="FullPhotoPath">
                        <Binding.FallbackValue>
                            <ImageSource>/picture.png</ImageSource>
                        </Binding.FallbackValue>
                        <Binding.TargetNullValue>
                            <ImageSource>/picture.png</ImageSource>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>

            <Button Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Name="Button_SelectPhotoPath" Click="Button_SelectPhotoPath_Click">Выбрать фотографию</Button>

            <Button Name="Button_Save" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Click="Button_Save_Click">Сохранить</Button>
        </Grid>
    </ScrollViewer>
</Page>
