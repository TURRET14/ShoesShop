<Page x:Class="ShoesShop.EditOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditOrderPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Редактирование/добавление заказа"></TextBlock>
        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата заказа"></TextBlock>
        <DatePicker Name="DatePicker_OrderDate" Grid.Row="1" Grid.Column="1" SelectedDate="{Binding OrderDate}"></DatePicker>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата доставки"></TextBlock>
        <DatePicker Name="DatePicker_DeliveryDate" Grid.Row="2" Grid.Column="1" SelectedDate="{Binding DeliveryDate}"></DatePicker>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Пункт выдачи"></TextBlock>
        <ComboBox Name="ComboBox_PickupPoint" Grid.Row="3" Grid.Column="1" SelectedItem="{Binding PickupPoint}" DisplayMemberPath="FullAddress"></ComboBox>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Клиент"></TextBlock>
        <ComboBox Name="ComboBox_User" Grid.Row="4" Grid.Column="1" SelectedItem="{Binding ShopUser}" DisplayMemberPath="UserFIO"></ComboBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Код для выдачи"></TextBlock>
        <TextBox Name="TextBox_Code" Grid.Row="5" Grid.Column="1" Text="{Binding Code}"></TextBox>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Статус заказа"></TextBlock>
        <ComboBox Name="ComboBox_Status" Grid.Row="6" Grid.Column="1" SelectedItem="{Binding OrderStatus}" DisplayMemberPath="Name"></ComboBox>

        <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Text="Детали заказа"></TextBlock>
        <DataGrid Name="DataGrid_Details" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridComboBoxColumn x:Name="Column_Product" Header="Товар" SelectedItemBinding="{Binding Product}" DisplayMemberPath="ProductName" Width="*"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Amount}" Width="Auto"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="Button_Save" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Click="Button_Save_Click">Сохранить</Button>
    </Grid>
</Page>
